= bootstrap_form_for @category, layout: :horizontal do |f|
  = f.hidden_field :parent_id
  = f.text_field :title, autofocus: true
  = f.form_group do
    = f.check_box :hidden, label: t('categories.hide')

  = f.form_group do
    = f.primary
    = link_to t('shared.cancel'), categories_path, class: 'btn btn-default'
