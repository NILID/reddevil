%h1 Listing events

%table
  %tr
    %th Title
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= link_to event.title, [@user, event]
      -if can? :manage, [@user, Event]
        %td= link_to t('shared.edit'), edit_user_event_path(@user, event)
        %td= link_to t('shared.del'), [@user, event], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Event', new_user_event_path(@user) if can? :create, Event
