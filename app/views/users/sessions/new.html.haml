.row
  .col-md-6
    .page-header
      %h4= t 'devise.sign'
    = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal) do |f|
      = f.email_field :email, autofocus: true, class: 'form-control'
      = f.password_field :password, autocomplete: 'off', class: 'form-control'
      - if devise_mapping.rememberable?
        = f.form_group :remember_me do
          = f.check_box :remember_me, label: t('devise.remember')
      = f.form_group do
        = f.submit t('devise.login'), class: 'btn btn-primary'
.row
  .col-md-6= render 'users/shared/links'
