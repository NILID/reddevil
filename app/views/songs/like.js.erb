<% count_media = current_user.likees(Song).count + current_user.likees(Album).count%>

<%if count_media == 1%>
  $(".favorites-panel").fadeIn();
<%elsif count_media == 0%>
  $(".favorites-panel").fadeOut();
<%end%>
$("#<%=dom_id @song%> i.icon-like-song").toggleClass('glyphicon-star glyphicon-star-empty');
$(".favorites-panel .likees-count").html("<%=j plural current_user.likees(Song).count, 'song'%>");
