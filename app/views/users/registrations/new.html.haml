= render 'users/shared/new_email'

.row
  .col-md-12
    .card
      .card-header
        = t 'devise.signup'
      .card-body
        = bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), layout: :horizontal) do |f|
          = f.email_field :email, autofocus: true, autocomplete: 'email'
          = f.password_field :password, autocomplete: 'new-password'
          = f.password_field :password_confirmation, autocomplete: 'new-password'
          = f.form_group do
            = f.primary t('devise.tosignup')
      .card-footer
        = render 'users/shared/links'
