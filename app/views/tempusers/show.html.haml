- model_class = Tempuser
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p= @tempuser.username
%p= @tempuser.user.email if @tempuser.user

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tempusers_path, :class => 'btn'
  -if can? :manage, @tempuser
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_tempuser_path(@tempuser), :class => 'btn'
    = link_to t('shared.del'), tempuser_path(@tempuser), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
