= form_for @doc, :html => { :class => 'form-horizontal', multipart: true } do |f|
  - if @doc.errors.any?
    #error_explanation
      %h2= "#{pluralize(@doc.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @doc.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'span11 title_auto'
  .control-group
    = f.label :desc, :class => 'control-label'
    .controls
      = f.text_area :desc, :class => 'span11', rows: 4
  .control-group
    .controls
      = f.file_field :file, :class => 'text_field'
  .control-group
    = f.label :category, :class => 'control-label'
    .controls
      = f.select(:category_id, Category.order(:title).collect {|c| [ "#{c.title} #{!c.root? ? "(#{c.root.title})" : ''}",  c.id]}, { include_blank: t('categories.select_category') } )

  .form-actions
    = f.submit :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), docs_path, :class => 'btn'
