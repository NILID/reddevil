- model_class = Year
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:year)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @years.each do |year|
      %tr
        %td= link_to year.id, year_path(year)
        %td= year.year
        %td=l year.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_year_path(year), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), year_path(year), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_year_path, :class => 'btn btn-primary'
