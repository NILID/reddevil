- model_class = Holiday
.page-header
  %h1
    =t '.title', :default => model_class.model_name.human.pluralize.titleize
    = @member.full_name
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:start)
      %th= model_class.human_attribute_name(:end)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @holidays.each do |holiday|
      %tr
        %td= holiday.start
        %td= holiday.end
        %td
          = link_to t('shared.edit'), edit_member_holiday_path(@member, holiday), class: 'btn btn-default btn-xs'
          = link_to t('shared.del'), [@member, holiday], :method => :delete, data: { confirm: t('shared.sure') }, class: 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_member_holiday_path(@member), :class => 'btn btn-primary'
