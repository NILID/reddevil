-if @messages
  .row
    .span12
      -@messages.each do |message|
        .alert.alert-info
          %h5=message.title
          %p= simple_format message.content

.row
  -if !@bduser.empty? || !@bdusers_yesterday.empty? || !@bdusers_prevyesterday.empty?
    .span6{class: (@holidays_today.empty? && @holidays_tomorrow.empty?) ? 'offset3' : ''}
      .birthday-block.well.well-small.ny-block
        -if !@bdusers_prevyesterday.empty?
          %h5= t 'shared.birthdays_prevyesterday'
          %hr
          -@bdusers_prevyesterday.keys.sort.each do |u|
            =render @bdusers_prevyesterday[u], bdclass: '', turntext: t('member.turned')

        -if !@bdusers_yesterday.empty?
          %h5= t 'shared.birthdays_yesterday'
          %hr
          -@bdusers_yesterday.keys.sort.each do |u|
            =render @bdusers_yesterday[u], bdclass: '', turntext: t('member.turned')


        -if !@bdusers_today.empty?
          %h5= @bdusers_today.keys.count>1 ? t('shared.birthdays_today') : t('shared.birthday_today')
          -@bdusers_today.keys.sort.each do |u|
            =render @bdusers_today[u], bdclass: 'alert alert-success', turntext: t('member.turn')

        -if !@bdusers_tomorrow.empty?
          %h5= t 'shared.birthdays_tomorrow'
          -@bdusers_tomorrow.keys.sort.each do |u|
            %hr
            =render @bdusers_tomorrow[u], bdclass: '', turntext: t('member.willturn')
          %hr

        -if !@bdusers_month.empty?
          %h5= @bdusers_month.keys.count>1 ? t('shared.birthdays') : t('shared.birthday')
          -@bdusers_month.keys.sort.each do |u|
            %hr
            =render @bdusers_month[u], bdclass: '', turntext: t('member.willturn')
  -else
    .span3


  -if !@holidays_today.empty? || !@holidays_tomorrow.empty?
    .span6
      .birthday-block.well.well-small.ny-block
        - if !@holidays_today.empty?
          %h5
            = t 'shared.today'
            %small= Russian.strftime(DateTime.now, "%d %B")
          -@holidays_today.each do |h|
            %p.alert.alert-success=h[:name]
        - if !@holidays_tomorrow.empty?
          %h5
            = t 'shared.tomorrow'
            %small= Russian.strftime(DateTime.tomorrow, "%d %B")
          -@holidays_tomorrow.each do |h|
            %p=h[:name]

.row
  .span6.offset3
    %h5=t 'docs.last_docs'
    =render partial: 'docs/mini_doc', collection: @docs