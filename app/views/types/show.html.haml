- model_class = Type
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @type.title

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), types_path, :class => 'btn'
  = link_to t('shared.edit'), edit_type_path(@type), :class => 'btn'
  = link_to t('shared.del'), type_path(@type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
