%h1=t 'songs.add'

= form_for [@album, @song], html: { class: 'form-horizontal' }  do |f|
  - if @song.errors.any?
    #error_explanation
      %h2= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:"
      %ul
        - @song.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :file
    = f.file_field :file, :class => 'text_field'
  .actions
    = f.submit 'Save'

=link_to 'back', @album