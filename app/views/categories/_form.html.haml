.card
  .card-header
    = formtitle

  = bootstrap_form_for @category, layout: :horizontal do |f|
    .card-body
      = f.hidden_field :parent_id
      = f.text_field :title, autofocus: true
      = f.form_group do
        = f.check_box :hidden, custom: :switch, label: t('categories.hide')

    .card-footer
      = f.primary t('shared.save')
      = link_to t('shared.cancel'), categories_path, class: 'btn btn-secondary'
