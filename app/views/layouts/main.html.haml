!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "REDDEVIL"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = favicon_link_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = yield :js

  %body
    #wrapper
      .navbar
        .navbar-inner
          .container
            %a.brand(href="/") REDDEVIL
            %ul.nav
              %li{class: (params[:controller] == 'members') ? 'active' : ''}= link_to t('member.title'), members_path
              %li{class: (params[:controller] == 'docs') ? 'active' : ''}=link_to t('docs.title'), docs_path
              -if user_signed_in?
                %li{class: (params[:controller] == 'albums') || (params[:controller] == 'songs') ? 'active' : ''}= link_to t('shared.music'), albums_path
              -if can? :read, Art
                %li{class: (params[:controller] == 'arts') ? 'active' : ''}= link_to t('shared.art'), arts_path
              -if can? :manage, Message
                %li{class: (params[:controller] == 'messages') ? 'active' : ''}= link_to t('message.title'), messages_path

            =render 'users/userbar'

      .container.main-content
        = bootstrap_flash
        = yield
      %footer
        .container
          .row
            .span6
              %br/
              %br/
              %br/
              %br/
              %br/
              %br/
              %br/
              %br/
              %br/
              &copy; LUCH 2014-2016
            .span6.text-right
              %br/
              %br/
              %br/
              %br/
              %br/
              %br/
              %br/
              %br/
              %br/

              =link_to notes_path do
                %i.icon.icon-cog
                =t 'notes.title'
