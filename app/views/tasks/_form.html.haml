= bootstrap_form_for [@machine, @task], layout: :horizontal do |f|
  = f.text_field :title
  .date
    = f.text_field :start_time,
      append: fa_icon('th'),
      class: 'datepicker',
      value: (f.object.start_time.to_datetime.strftime('%d.%m.%Y') if f.object.start_time.present?)

  .date
    = f.text_field :end_time,
      append: fa_icon('th'),
      class: 'datepicker',
      value: (f.object.end_time.to_datetime.strftime('%d.%m.%Y') if f.object.end_time.present?)

  = f.form_group do
    %p.text-success
      %span#progress_amount_show= @task.complete
      \ %
    = f.hidden_field :complete, id: 'progress_amount'
    #progress_slider{data: {amount: @task.complete}}
  = f.form_group do
    .checkbox
      = f.check_box :update_tasks_flag, checked: false
    %span.help-block= t 'tasks.update_tasks_help'

  .form-group
    = f.primary t('shared.save')
    = link_to t('shared.cancel'), machines_path, class: 'btn btn-secondary'
