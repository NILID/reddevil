= form_for [@member, @holiday], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :start, :class => 'control-label'
    .controls
      = f.date_select :start, :class => 'date_select'
  .control-group
    = f.label :end, :class => 'control-label'
    .controls
      = f.date_select :end, :class => 'date_select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), [@member, Holiday], :class => 'btn'
