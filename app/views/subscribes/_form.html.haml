= form_for @subscribe, :html => { class: 'form-horizontal' } do |f|

  .form-group
    = f.label :fullname, class: 'control-label'
    = f.text_field :fullname, class: 'text_field form-control'
  .form-group
    = f.label :departament, class: 'control-label'
    = f.text_field :departament, class: 'text_field form-control'
  .form-group
    = f.label :position, class: 'control-label'
    = f.text_area :position, class: 'text_field form-control'
  .form-group
    = f.label :place, class: 'control-label'
    = f.text_field :place, class: 'text_field form-control'
  .form-group
    = f.label :phone_inter, class: 'control-label'
    = f.text_field :phone_inter, class: 'text_field form-control'
  .form-group
    = f.label :phone_city, class: 'control-label'
    = f.text_field :phone_city, class: 'text_field form-control'
  .form-group
    = f.label :email, class: 'control-label'
    = f.text_field :email, class: 'text_field form-control'

  .form-group
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('shared.cancel'), subscribes_path, class: 'btn btn-default'