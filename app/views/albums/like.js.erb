<% count_media = current_user.likees(Song).count + current_user.likees(Album).count%>

<%if count_media == 1%>
  $(".favorites-panel").slideDown();
<%elsif count_media == 0%>
  $(".favorites-panel").slideUp();
<%end%>
$("#<%=dom_id @album%> .fa-star:first").toggleClass('text-muted');
$(".favorites-panel .likees-album-count").html("<%=j plural current_user.likees(Album).count, 'album'%>");