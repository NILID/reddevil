.row
  .col-md-6.offset-md-3
    .card
      .card-header
        = t 'devise.forgot'
      .card-body
        = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), layout: :horizontal, html: { :method => :post }) do |f|
          = f.email_field :email, autofocus: true
          = f.form_group do
            = f.primary t('devise.sendmepassword')
      .card-footer
        = render 'users/shared/links'
