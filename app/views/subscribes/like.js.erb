<% count_subscribes = current_user.likees(Subscribe).count%>

<%if count_subscribes > 0%>
  $(".favorites-panel").removeClass('hidden');
<%else%>
  $(".favorites-panel").addClass('hidden');
<%end%>
$("#<%=dom_id @subscribe%> i").toggleClass('icon-star icon-star-empty');
$(".favorites-panel .likees-count").html("<%=j plural count_subscribes, 'subscribe'%>");
