= div_for doc, class: 'well well-small' do
  %strong= doc.title
  %span.text-right
    - unless doc.categories.empty?
      - doc.categories.each do |g|
        = link_to(docs_path(by_category: g.id), remote: true) do
          %span.label.label-default.label-pad><= g.title

  %p.save-wspace
    %small= simple_format doc.desc
  = link_to t('docs.download'), doc.file.url, class: 'btn btn-xs btn-primary', target: '_blank'
  - if can? :manage, Doc
    = link_to t('shared.edit'), edit_doc_path(doc), class: 'btn btn-default btn-xs'
    = link_to t('shared.del'), doc_path(doc), method: :delete, data: { confirm: t('shared.sure') }, class: 'btn btn-xs btn-danger'