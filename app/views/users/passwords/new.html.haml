.row
  .col-md-8
    .panel.panel-default
      .panel-heading
        .panel-title
          = t 'devise.forgot'
      .panel-body
        = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), layout: :horizontal, html: { :method => :post }) do |f|
          = f.email_field :email, autofocus: true
          = f.form_group do
            = f.primary t('devise.sendmepassword')
      .panel-footer
        = render 'users/shared/links'
