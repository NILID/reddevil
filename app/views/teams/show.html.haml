.page-header
  %h1= @team.title
%p

%p
  = @team.content
%p
  = @team.type.title
%p
  = image_tag @team.flag(:thumb)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), teams_path, :class => 'btn'
  -if can? :manage, @team
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_team_path(@team), :class => 'btn'
    = link_to t('shared.del'), team_path(@team), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
