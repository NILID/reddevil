- if f.id && (can? :edit, f)
  = link_to edit_user_forecast_path(user, f), data: {target: "#dialog_forecast_#{match.id}", toggle: 'modal'}, title: t('forecasts.edit'), class: 'modal-link btn btn-secondary btn-sm', remote: true do
    = fa_icon 'cog'
  .modal(tabindex='-1' role='dialog' id="dialog_forecast_#{match.id}" aria-hidden='true')

.total
  - if (round.deadline < DateTime.now) || (f.user == current_user)
    - if (match.team1 == f.winner) || (f.team1goal > f.team2goal)
      #{f.team1goal}
      - if (f.ending != 'basic') && !round.draw
        %span.tip
          - if f.ending == 'penalty'
            %span.ending= t("matches.#{(round.type_id == 2) ? 'bullit' : f.ending}_short")
            .tip-text= t("matches.#{(round.type_id == 2) ? 'bullit' : f.ending}")
          - elsif f.ending == 'overtime'
            %span.ending= t("matches.overtime_short#{(round.type_id == 2) ? '_hockey' : nil}")
            .tip-text= t("matches.overtime#{(round.type_id == 2) ? '_hockey' : nil}")
      \ : #{f.team2goal}
    - else (match.team2 == f.winner) || (f.team1goal < f.team2goal)
      #{f.team1goal} : #{f.team2goal}
      - if (f.ending != 'basic') && !round.draw
        %span.tip
          - if f.ending == 'penalty'
            %span.ending= t("matches.#{(round.type_id == 2) ? 'bullit' : f.ending}_short")
            .tip-text= t("matches.#{(round.type_id == 2) ? 'bullit' : f.ending}")
          - elsif f.ending == 'overtime'
            %span.ending= t("matches.overtime_short#{(round.type_id == 2) ? '_hockey' : nil}")
            .tip-text= t("matches.overtime#{(round.type_id == 2) ? '_hockey' : nil}")
  - else
    - unless round.empty_match && match.desc?
      X : X
