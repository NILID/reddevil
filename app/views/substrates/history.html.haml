- set_meta_tags title: t('shared.history')

.card
  .card-body
    .row
      .col
        - if params[:action] == 'changes'
          = render 'substrates/breadcrumb', titles: [link_to(@substrate.title, @substrate), t('shared.history')]
        - else
          = render 'substrates/breadcrumb', titles: [t('shared.history')]

    .row
      .col
        - if @versions.empty?
          .text-center.my-5
            .h3.text-muted= t('history.empty')
        - else
          = will_paginate @versions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer

          %table.table
            %thead
              %tr
                %th Дата
                %th Пользователь
                %th Действие
                %th Изменения
            %tbody
              = render(partial: 'substrates/version', collection: @versions)

          = will_paginate @versions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer
