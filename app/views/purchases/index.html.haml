- model_class = Purchase

.row
  .span
    .alert.alert-info= t 'shared.building'

    .page-header
      %h3
        = t 'purchases.title'
        -if can? :manage, @year
          %small
            = link_to t('shared.edit'), edit_year_path(@year), class: 'btn btn-mini'
            = link_to t('shared.del'), @year, method: :delete, data: { confirm: t('shared.sure') }, class: 'btn btn-mini btn-danger'

    .purchases-table.well
      %table.table.table-bordered.table-hover.table-condensed
        %thead.header
          %tr
            %th(rowspan='2') â„–
            %th(rowspan='2')= model_class.human_attribute_name(:title)
            - @year.columns.each do |column|
              %th(rowspan='2')= column.name
            %th(colspan='2')=t 'deliveries.title'
          %tr
            %th= Delivery.human_attribute_name(:doc)
            %th= Delivery.human_attribute_name(:delivery)

        %tbody= render partial: 'purchase', collection: @purchases
      = link_to new_form_year_purchase_path(@year, Purchase), method: :post, remote: true, disable_with: t('shared.waiting'), class: 'btn btn-primary btn-small' do
        %i.icon.icon-plus
        &nbsp;
        =t('purchases.add_new')