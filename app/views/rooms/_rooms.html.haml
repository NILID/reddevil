.mb-3
  = link_to t('chat.title'), rooms_path, class: 'h3 mr-2'
%ul.list-group
  = link_to fa_icon('plus'), new_room_path, class: 'list-group-item list-group-item-action text-center text-muted'
  - @rooms.each do |room|
    = link_to room, class: "list-group-item list-group-item-action #{room == @room ? 'list-group-item-warning' : nil}" do
      = room.name
      - if room.private?
        .float-right.text-muted
          = fa_icon 'eye', title: Room.human_attribute_name(:private)
