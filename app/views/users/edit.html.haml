.card
  .card-header
    = t 'profiles.editing'

  = bootstrap_form_for @user, layout: :horizontal do |f|
    .card-body
      .row
        .col
          = f.fields_for :profile do |p|
            = p.text_field :login, autofocus: true, control_col: 'col-8', label_col: 'col'
            = p.file_field :avatar, control_col: 'col-8', label_col: 'col'
            #changecolor.colorpicker-component
              = p.text_field :background_color,
                value: @user.background_color,
                control_col: 'col-8',
                label_col: 'col',
                prepend: content_tag(:span, content_tag(:i), class: 'colorpicker-input-addon')
          = f.fields_for :member do |m|
            = render 'members/member_fields_names', f: m
        .col
          = f.fields_for :member do |m|
            = render 'members/member_fields_other', f: m
    .card-footer
      = f.form_group do
        = f.primary
