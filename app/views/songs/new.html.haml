= bootstrap_form_for [@album, @song], layout: :horizontal, html: { class: 'card' } do |f|
  .card-header
    %h3= t 'songs.add'
  .card-body
    = f.text_field :title
    = f.file_field :file
  .card-footer
    = f.form_group do
      = f.primary
      = link_to t('shared.cancel'), @album, class: 'btn btn-secondary'