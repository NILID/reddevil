$("#substrate_<%=@substrate.id%>").removeClass("<%=Substrate::STATUSES.map{|s| status_style(s, :table)}.compact.join(' ')%>").addClass("<%=status_style(@substrate.status, :table)%>");

<% get_class = @substrate.statuses_mask == 6 ? '.card-index' : '.card-archive' %>
$("<%= get_class %> #substrate_<%=@substrate.id%>").fadeOut();
$("<%= get_class %> <%= get_class %>-link").effect('highlight', { color: '#007bff' }, 1500);
