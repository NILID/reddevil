= form_for @subscribe, :html => { class: 'form-horizontal' } do |f|

  .control-group
    = f.label :fullname, class: 'control-label'
    .controls= f.text_field :fullname, class: 'text_field'
  .control-group
    = f.label :departament, class: 'control-label'
    .controls= f.text_field :departament, class: 'text_field'
  .control-group
    = f.label :position, class: 'control-label'
    .controls= f.text_area :position, class: 'text_field'
  .control-group
    = f.label :place, class: 'control-label'
    .controls= f.text_field :place, class: 'text_field'
  .control-group
    = f.label :phone_inter, class: 'control-label'
    .controls= f.text_field :phone_inter, class: 'text_field'
  .control-group
    = f.label :phone_city, class: 'control-label'
    .controls= f.text_field :phone_city, class: 'text_field'
  .control-group
    = f.label :email, class: 'control-label'
    .controls= f.text_field :email, class: 'text_field'

  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('shared.cancel'), subscribes_path, class: 'btn'