.modal-dialog.modal-lg(role='document')
  = bootstrap_nested_form_for [year, purchase], remote: true, layout: :horizontal, label_col: 'col-sm-1', control_col: 'col-sm-11' do |f|
    .modal-content
      .modal-body
        = f.fields_for :deliveries do |c|
          .row
            .col-md-5
              = c.text_field :doc, prepend: Delivery.human_attribute_name(:doc),
                class: 'datepicker',
                hide_label: true,
                value: (c.object.doc.to_datetime.strftime('%d.%m.%Y') if c.object.doc.present?)
            .col-md-5
              = c.text_field :delivery,
                prepend: Delivery.human_attribute_name(:delivery),
                class: 'datepicker',
                hide_label: true,
                value: (c.object.delivery.to_datetime.strftime('%d.%m.%Y') if c.object.delivery.present?)
            .col-md-2
              = c.link_to_remove class: 'btn btn-danger' do
                %span.glyphicon.glyphicon-remove
        = f.link_to_add :deliveries, class: 'btn btn-default' do
          %span.glyphicon.glyphicon-plus
          = t 'columns.add'

      .modal-footer
        %button.btn.btn-default(data-dismiss='modal')= t 'shared.close'
        = f.primary