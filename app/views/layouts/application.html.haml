!!! 5
%html{ lang: 'ru' }
  %head
    %meta(charset='utf-8')
    %meta(http-equiv='X-UA-Compatible' content='IE=Edge,chrome=1')
    %meta(name='viewport' content='width=device-width, initial-scale=1.0')
    = display_meta_tags site: 'REDDEVIL'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js'
    = favicon_link_tag
    = stylesheet_link_tag    'application', media: 'all', data: { turbolinks_track: true }
    = javascript_include_tag 'application', data: { turbolinks_track: true }
    = yield :js
    = render 'users/user_style' if user_signed_in?

  %body
    = render 'main/menu'

    .container-fluid.main-content
      .row
        .col-xs-12= bootstrap_flash
      .row
        .col-md-3
          .row
            .col-md-12= yield :sidebar
          - if user_signed_in? && (params[:controller] == 'albums' || params[:controller] == 'songs')
            .row
              .col-md-3.well.sidebar-nav.favorites-panel{data: { spy: 'affix' }, class: (current_user.likees(Song).count + current_user.likees(Album).count) == 0 ? 'hidden' : nil}
                %ul.nav.panel-group
                  %li
                    = link_to favorites_albums_path do
                      = t('albums.favorites')
                      %p
                        %span.likees-album-count= plural current_user.likees(Album).count, 'album'
                        %span.likees-count= plural current_user.likees(Song).count, 'song'
        .col-md-9
          = yield

    %footer.container
      .row
        .col-md-6
          %p.text-muted &copy; LUCH 2014-2018
        .col-md-6.text-right
          = link_to notes_path do
            %i.glyphicon.glyphicon-cog
            = t 'notes.title'
