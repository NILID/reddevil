= form_for @tempuser, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :username, :class => 'control-label'
    = f.text_field :username, :class => 'text_field form-control'

  .form-group
    = f.label :user_id, :class => 'control-label'
    .form-control= f.select(:user_id, User.order(:email).collect {|u| [ u.email,  u.id]}, { include_blank: t('tempusers.select_user') } )
  .form-group
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('shared.cancel'), tempusers_path, :class => 'btn btn-default'
