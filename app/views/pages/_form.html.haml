= javascript_include_tag Ckeditor.cdn_url

= bootstrap_form_for @page, html: { class: 'card' } do |f|
  .card-body
    = render 'breadcrumb', titles: formtitle

    = render 'error', object: @page
    .field
      = f.text_field :title
    .field
      = f.cktext_area :content

  .card-footer
    = f.primary t('shared.save')
