= form_for @message, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :title, :class => 'control-label'
    = f.text_field :title, :class => 'text_field form-control'
  .form-group
    = f.label :content, :class => 'control-label'
    = f.text_area :content, :class => 'text_area form-control'
  .form-group
    .checkbox
      = f.label do
        = f.check_box :close
        'close'
  .form-group
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('shared.cancel'), messages_path, :class => 'btn btn-default'
