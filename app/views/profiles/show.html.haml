- set_meta_tags title: @profile.fullname

.page-header
  %h3
    = @profile.fullname
    (#{@profile.login? ? @profile.login : @user.email})
    %small
      = link_to t('profiles.edit'), edit_user_profile_path(@user) if can? :edit, @profile
      - if can? :edit_roles, @user
        = link_to t('users.to_edit_roles'), edit_roles_user_path(@user)

.row
  .col-md-3
    = image_tag @profile.avatar.url(:medium), class: 'thumbnail img-responsive'

  .col-md-9
    %dl.dl-horizontal
      %dt=t 'users.has_groups'
      %dd
        -@user.groups.each do |group|
          %span.label.label-info=t "user.groups.#{group}"