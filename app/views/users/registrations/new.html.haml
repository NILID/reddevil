= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
  %fieldset
    %legend= t 'devise.signup'
    = devise_error_messages!
    .control-group
      = f.label :email, class: 'control-label'
      .controls= f.email_field :email, autofocus: true
    .control-group
      = f.label :password, class: 'control-label'
      .controls= f.password_field :password, autocomplete: 'off'
    .control-group
      = f.label :password_confirmation, class: 'control-label'
      .controls= f.password_field :password_confirmation, autocomplete: 'off'
    .controls= f.submit t('devise.tosignup'), class: 'btn'
= render "users/shared/links"
