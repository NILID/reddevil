= form_for @material do |f|
  - if @material.errors.any?
    #error_explanation
      %h2= "#{pluralize(@material.errors.count, "error")} prohibited this material from being saved:"
      %ul
        - @material.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :groups_mask
    -User::GROUPS.each_with_index do |p, index|
      = check_box_tag "material[groups][#{p}]", p, ((@material.groups && (@material.groups.include? p)) ? true : false), {:name => "material[groups][]", validate: true}
      = label_tag "material[groups][#{p}]" do
        %span.text= t("profile.purpose.#{p}")
    = hidden_field_tag "materials[groups][]", ""
  .actions
    = f.submit 'Save'
